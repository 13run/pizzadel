  <body>
		<div class="wrapper">
			<div class="container">

			<nav class="navbar  navbar-light navbar-expand-sm navbar-expand-lg navbar-expand-md navbar-expand-md" style="background-color: #e3f2fd;">
			
				<a class="navbar-brand mt-auto mb-auto"  href="/">
					<img src="/img/logo.png" width="45" height="38" alt="Pizza Deliver">
					PizzaDeliver
				</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse " id="navbarSupportedContent"  >
					<ul class="navbar-nav " >
					<li class="nav-item">
						<a class="nav-link" href="/visits">Visits</a>
					</li>
					<li class="nav-item ">
						<a class="nav-link" href="/about">About</a>
					</li>
					<li class="nav-item ">
						<a class="nav-link" href="#">Link</a>
					</li>
					</ul>
					<div class="ml-auto">
						<form action="/cart" method="POST"> 
						<input id="orders" style="display: ;"></input>
						<input type="submit" class="btn btn-lg btn-outline-primary " id="x"></input>
						</form>
					</div>
				</div>
			</nav>

			<article>
				<div class="">
					<%if @error && @error.length > 0 then %>
							<div class="alert alert-danger"><%=@error%></div>
					<% end %>
					<%= yield %>
				</div>
			</article>
		</div>
		</div>
